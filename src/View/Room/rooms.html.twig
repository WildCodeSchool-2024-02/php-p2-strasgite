{% extends 'layout.html.twig' %}

{% block banner %}
    <img src="../assets/images/facade2.jpg" id='clip_accueil' alt="">
{% endblock %}

{% block content %}
    <h1>Nos chambres</h1>
        <ul class='index-ul'>
            <div class='grid'>
            {% for room in rooms %}
                <div id='room-article'>
                    <article>
                        <div class='room_description'>
                            <div class='text-and-image'>
                                <div class='room_img'><img src="/assets/images/room{{room.id}}/room{{room.id}}-1.webp" alt=""></div>
                                <div class='text-and-button'>
                                    <h3>{{ room.title }}</h3>
                                    <p><strong>Type : </strong>{{ room.type }} </p>
                                    <p><strong>Type de lits : </strong>{{ room.bed_type }}</p>
                                </div>
                                <div class='type-div'>
                                    <a href="/rooms/showRoom?id={{ room.id }}">En savoir plus</a>
                                </div>
                            </div>
                            <p><strong>Description :</strong></p>
                            <p>{{ room.description }}</p>
                        </div>
                    </article>
                </div>
            {% else %}
                <li>Nothing to display</li>
            {% endfor %}
            </div>
        </ul>
{% endblock %}
