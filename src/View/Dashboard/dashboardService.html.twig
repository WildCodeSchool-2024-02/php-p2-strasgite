{% extends 'layout.html.twig' %}

{% block banner %}
    <img src="/assets/images/Dashboardbanner.jpg" id='clip_accueil' alt="Dashboard Bannière">
{% endblock %}

{% block content %}
    <div class="dashboard">
        <div class="dashboardTitle">
            <img src="/assets/images/roue-dentee.png" alt="Logo roue crantée">
            <h2> Interface administrateur > Gestion des services </h2>
        </div>
        <div class="DashboardServiceContent">
            <form method="POST">
            <input type="textarea">
            <input class="btnSubmit" type="submit" value="Valider les services" formaction="/dashboard/services/add">
            {{ dump(_POST) }}
             {% for reservation in reservations %}
                <div = class"serviceCheckCard">
